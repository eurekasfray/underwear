# Let the front controller be the directory index
DirectoryIndex app.php

# Turn on the rewrite engine
RewriteEngine On

# Let the "web" directory be the rewrite base
RewriteBase /web

# Display files, and not directories
RewriteCond %{REQUEST_FILENAME} !-f

# Rewrite any other request to the font controller
RewriteRule ^.*$ app.php/$0 [PT,L]
